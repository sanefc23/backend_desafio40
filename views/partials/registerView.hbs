<div class="container col-4">
    <form action="/user/register" method="POST" name="register">
        <div class="form-group" style="padding:1.5em;">
            <input type="email" class="form-control" id="email" name="email" aria-describedby="email"
                placeholder="Email">
        </div>
        <div class="form-group" style="padding:1.5em;">
            <input type="text" class="form-control" id="name" name="name" aria-describedby="name" placeholder="Nombre">
        </div>
        <div class="form-group" style="padding:1.5em;">
            <input type="text" class="form-control" id="lastName" name="lastName" aria-describedby="lastName"
                placeholder="Apellido">
        </div>
        <div class="form-group" style="padding:1.5em;">
            <input type="password" class="form-control" id="password" name="password" aria-describedby="password"
                placeholder="Password">
        </div>
        <div class="form-group" style="padding:1.5em;">
            <input type="password" class="form-control" id="passwordCheck" name="passwordCheck"
                aria-describedby="passwordCheck" placeholder="Reingresa password">
        </div>
        <button type="submit" class="btn btn-warning" style="margin:1.5em;">Confirmar registro</button>
    </form>
</div>